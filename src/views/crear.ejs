<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>

<main>
    <h1><%= about %></h1>
    <hr>
    <form id="crearProductos-form">
        <label for="nameProd">Nombre</label>
        <input type="text" name="nombre" id="nameProd" required>
        <br>

        <label for="imageProd">Imagen</label>
        <input type="text" name="img_url" id="imageProd" required>
        <br>

        <select name="tipo" id="categoryProd" required>
            <option value="ropa">Ropa</option>
            <option value="juguete">Juguete</option>
        </select>
        <br>

        <label for="precioProd">Precio</label>
        <input type="number" name="precio" id="precioProd" required>
        <br>

        <input type="submit" value="Crear producto">
    </form>

    <div id="contenedor-productos"></div>
</main>
<script src="js/crear.js"></script>
<%- include("partials/footer.ejs") %>